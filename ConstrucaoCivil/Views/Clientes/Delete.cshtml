@model ConstrucaoCivil.Models.tblCliente

@{
    ViewBag.Title = "Apagar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card text-center">
            <div class="card-header">
                Apagar clientes
            </div>
            <div class="card-block">
                <h4 class="card-title">Tem certeza que pretende apagar esse cliente?</h4>
            </div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.nif)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nif)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.tipo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tipo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.createdAt)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.createdAt)
                </dd>

            </dl>
            <div class="card-footer text-muted text-center">

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Apagar" class="btn btn-danger btn-rounded" /> |
                        @Html.ActionLink("Voltar a lista", "Index", new {@class="btn btn-default" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>